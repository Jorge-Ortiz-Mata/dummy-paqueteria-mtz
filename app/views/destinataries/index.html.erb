<%= turbo_frame_tag 'destinataries' do %>
  <div class="flex flex-col w-full gap-5">
    <div class="flex flex-col w-full flex-1 gap-5">
      <div class="flex items-center w-full gap-2">
        <%= link_to new_remitent_destinatary_path(@remitent, sell_id: @sell.id), class: "flex items-center", data: { turbo_frame: 'remitent_destinatary' } do %>
          <i class="fa-solid fa-user-plus text-white bg-success py-2 px-1.5 shadow rounded-full text-sm hover:bg-green-700 duration-300"></i>
        <% end %>
        <div class="text-sm sm:text-base text-sidebarTextColor">
          <span>Destinatarios de:</span>
          <span class="font-semibold underline"><%= @remitent.name %></span>
        </div>
      </div>
      <%= render 'destinataries/destinataries', { destinataries: @destinataries, sell: @sell, remitent: @remitent } %>
    </div>
  </div>
<% end %>
