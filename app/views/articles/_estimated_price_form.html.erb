
<div class="flex flex-col overflow-y-auto px-2 sm:px-5 py-5 gap-10 bg-white border rounded shadow w-full xl:w-1/2">
  <div class="flex flex-col gap-1">
    <h3 class="font-semibold text-sidebarTextColor text-center text-xl">Estimar precio.</h3>
    <p class="text-sidebarTextColor text-center">Puedes calcular el precio de un artículo dependiendo de las medidas que poseé (ancho, largo y altura).</p>
  </div>

  <%= form_with(scope: :estimated_price, url: estimate_price_articles_path, method: :post, class: 'flex flex-col w-full gap-5') do |form| %>
    <div class="flex flex-col gap-1 w-full items-start">
      <%= form.label :width, 'Ancho (width) in:', class: 'font-bold mb-1 required' %>
      <%= form.number_field :width, step: :any, required: true, class: "input-tailwindcss font-semibold" %>
    </div>

    <div class="flex flex-col gap-1 w-full items-start">
      <%= form.label :length, 'Largo (length) in:', class: 'font-bold mb-1 required' %>
      <%= form.number_field :length, step: :any, required: true, class: "input-tailwindcss font-semibold" %>
    </div>

    <div class="flex flex-col gap-1 w-full items-start">
      <%= form.label :height, 'Altura (height) in:', class: 'font-bold mb-1 required' %>
      <%= form.number_field :height, step: :any, required: true, class: "input-tailwindcss font-semibold" %>
    </div>

    <div class="flex items-center justify-end text-sm font-semibold">
      <%= form.submit 'Calcular', class: "btn-primary cursor-pointer" %>
    </div>
  <% end %>

  <%= render 'estimated_price', { volume: 0.0, suggested_price: 0.0 } %>
</div>
