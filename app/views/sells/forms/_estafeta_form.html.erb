<%= form_with(model: estafeta_form, url: update_estafeta_info_sell_path(sell), method: :patch, class: 'flex flex-col w-full gap-10', id: 'estafeta_form') do |f| %>
  <div class="flex flex-col gap-1 w-full items-start">
    <%= f.label :carrier_name, 'Servicio de mensajería:', class: 'font-bold mb-1 required' %>
    <%= f.select(:carrier_name, Sell::CARRIER_PROVIDERS.map { |option| [humanize_carrier(option), option] },
      { include_blank: true },
      { class: "input-tailwindcss font-semibold #{ error_input_border(estafeta_form.errors.include?(:carrier_name)) }"
    }) %>
    <% if estafeta_form.errors.include?(:carrier_name) %>
      <%= render 'shared/input_error_msg', { object: estafeta_form, attribute: :carrier_name } %>
    <% end %>
  </div>
  <div class="flex flex-col gap-1 w-full items-start">
    <%= f.label :tracking_guide, 'Guía de rastreo:', class: 'font-bold mb-1 required' %>
    <%= f.text_field :tracking_guide, class: "input-tailwindcss font-semibold #{ error_input_border(estafeta_form.errors.include?(:tracking_guide)) }" %>
    <% if estafeta_form.errors.include?(:tracking_guide) %>
      <%= render 'shared/input_error_msg', { object: estafeta_form, attribute: :tracking_guide } %>
    <% end %>
  </div>
  <div class="flex items-center justify-end gap-3 mt-5">
    <%= f.submit 'Actualizar guía', class: "rounded py-2 px-4 bg-green-500 text-white font-semibold cursor-pointer", data: { turbo_frame: '_top' } %>
  </div>
<% end %>
