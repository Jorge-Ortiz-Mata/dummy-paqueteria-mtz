<%= turbo_frame_tag 'edit_sell' %>
<%= turbo_frame_tag 'estafeta' %>
<%= turbo_frame_tag 'whatsapp' %>

<section class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <h1 class="font-bold text-2xl text-sidebarTextColor">Envío no. <%= @sell.shipment_number_text %></h1>

    <%= form_with(model: Sell.new, id: "new_sell_form", class: "flex items-center") do |form| %>
      <%= form.submit 'Añadir nuevo envío', class: "btn-success bg-green-500 text-white font-semibold cursor-pointer", data: { turbo_frame: '_top' } %>
    <% end %>
  <% end %>

  <div class="flex flex-col w-full px-2 py-5 sm:px-5 gap-5">
    <div class="flex flex-col md:flex-row w-full gap-5">
      <%= render 'sell', sell: @sell %>
    </div>

    <%= render 'article_sells/article_sells', { sell: @sell } %>
  </div>
</section>
