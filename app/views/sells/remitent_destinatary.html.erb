<%= turbo_frame_tag 'remitent' %>

<div class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <%= link_to sells_path, class: 'flex items-center' do %>
      <h1 class="font-bold text-2xl text-sidebarTextColor">Remitente y Destinatario</h1>
    <% end %>
  <% end %>

  <div class="flex flex-col md:flex-row w-full gap-5 px-2 sm:px-5 flex-1 py-5">
    <div class="flex flex-col gap-5 w-1/2">
      <div class="flex flex-col px-2 sm:px-5 py-5 rounded shadow border bg-white flex-1 overflow-auto w-full gap-5">
        <div class="flex w-full gap-2">
          <%= link_to new_remitent_path(sell_id: @sell.id), class: "flex items-center", data: { turbo_frame: 'remitent' } do %>
            <i class="fa-solid fa-user-plus text-white bg-success py-2 px-1.5 shadow rounded-full text-sm hover:bg-green-700 duration-300"></i>
          <% end %>
          <h2 class="text-lg font-bold text-sidebarTextColor underline">Remitentes</h2>
        </div>
        <div class="flex flex-col gap-5">
          <%= render 'remitents/search_form', { sell: @sell } %>
          <%= render 'remitents/remitents', { remitents: @remitents, sell: @sell } %>
        </div>
      </div>
      <div class="flex flex-col px-2 sm:px-5 py-5 rounded shadow border bg-white flex-1 overflow-auto w-full gap-5">
        <div class="flex w-full justify-between">
          <h2 class="text-lg font-bold text-sidebarTextColor underline">Destinatarios</h2>
        </div>
        <%= turbo_frame_tag 'destinataries' do %>
          <div class="text-slate-500">Favor de seleccionar un remitente</div>
        <% end %>
      </div>
    </div>

    <div class="flex flex-col px-2 sm:px-5 py-5 rounded shadow border bg-white flex-1 overflow-auto w-full gap-5">
      <%= turbo_frame_tag 'remitent_destinatary' do %>
        <p class="text-sm sm:text-base text-sidebarTextColor">Favor de seleccionar el remitente y el destinatario</p>
      <% end %>
    </div>
  </div>
</div>
