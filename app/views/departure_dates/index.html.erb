<%= turbo_frame_tag 'new_departure_date' %>

<section class="flex flex-col h-full w-full">
  <%= render 'shared/navbar' do %>
    <%= link_to articles_path, class: 'flex items-center' do %>
      <h1 class="font-bold text-2xl text-sidebarTextColor">Fechas de salida</h1>
    <% end %>
  <% end %>

    <% if DepartureDate.any? %>
      <div class="flex flex-col h-full py-5 px-2 sm:px-5 gap-5">
        <%= render 'departure_dates', { prev_departure_dates: @prev_departure_dates, next_departure_dates: @next_departure_dates } %>
      </div>
    <% else %>
      <div class="flex flex-col p-5 rounded shadow w-full h-full items-center justify-center gap-10">
        <i class="fa-solid fa-plane-up text-[120px] md:text-[190px] text-sidebarTextColor"></i>
        <div class="flex flex-col gap-2 sm:gap-5">
          <h5 class="font-semibold text-lg text-sidebarTextColor text-center">Ninguna fecha añadida.</h5>
          <p class="text-sidebarTextColor text-center">
            Actualmente no cuentas con ninguna fecha de salida añadida
          </p>
          <div class="flex items-center justify-center">
            <%= link_to new_departure_date_path, class: "flex text-sm font-bold rounded bg-success px-4 py-2 text-white items-center gap-2", data: { turbo_frame: 'new_departure_date' } do %>
              <span>Añadir fecha de salida</span>
              <i class="fa-solid fa-plus text-base"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
</section>
